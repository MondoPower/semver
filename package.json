{
  "name": "semver-action",
  "version": "0.0.0",
  "private": true,
  "description": "GitHub action for Mondo.SemanticVersioning",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MondoPower/semver.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "MondoPower",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.0",
    "@actions/exec": "^1.0.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.7.12",
    "@typescript-eslint/parser": "^2.34.0",
    "@zeit/ncc": "^0.20.5",
    "acorn": ">=6.4.1",
    "eslint": "^7.1.0",
    "eslint-plugin-github": "^2.0.0",
    "eslint-plugin-jest": "^22.21.0",
    "jest": "^26.0.1",
    "jest-circus": "^26.0.1",
    "js-yaml": "^3.13.1",
    "kind-of": ">=6.0.3",
    "minimist": ">=0.2.1",
    "prettier": "^1.19.1",
    "ts-jest": "^26.0.0",
    "typescript": "^3.6.4"
  }
}
